<Window x:Class="TaskTimer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource SettingsTitle}" Height="680" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}"
        FontFamily="{StaticResource AppFont}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{DynamicResource SettingsHeader}" Style="{StaticResource SettingsHeaderText}"
                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="16">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource LabelBrowserDomainMappings}" Style="{StaticResource SettingsSectionTitleText}"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                        <TextBlock Text="{DynamicResource DescBrowserDomainMappings}"
                                   Style="{StaticResource SettingsDescriptionText}" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>

                        <ItemsControl ItemsSource="{Binding BrowserDomainMappings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Style="{StaticResource ModernTextBox}"
                                                 Text="{Binding Domain, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBox Grid.Column="2" Style="{StaticResource ModernTextBox}"
                                                 Text="{Binding TaskName, UpdateSourceTrigger=PropertyChanged}"/>
                                        <Button Grid.Column="3" Content="&#xE74D;" FontFamily="Segoe MDL2 Assets"
                                                Width="32" Height="32" Margin="4,0,0,0"
                                                VerticalAlignment="Center" Cursor="Hand"
                                                Style="{StaticResource SettingsDeleteIconButton}"
                                                Command="{Binding DataContext.RemoveDomainMappingCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="36"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{DynamicResource LabelDomain}" Style="{StaticResource SettingsLabelSmallText}" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Column="2" Text="{DynamicResource LabelTaskName}" Style="{StaticResource SettingsLabelSmallText}" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Grid>

                        <Button Content="{DynamicResource ButtonAddMapping}" Margin="0,8,0,0" HorizontalAlignment="Left"
                                Command="{Binding AddDomainMappingCommand}"
                                Style="{StaticResource SettingsAddButton}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="16">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource LabelProcessMappings}" Style="{StaticResource SettingsSectionTitleText}"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                        <TextBlock Text="{DynamicResource DescProcessMappings}"
                                   Style="{StaticResource SettingsDescriptionText}" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>

                        <ItemsControl ItemsSource="{Binding ProcessMappings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Style="{StaticResource ModernTextBox}"
                                                 Text="{Binding ProcessName, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBox Grid.Column="2" Style="{StaticResource ModernTextBox}"
                                                 Text="{Binding DefaultLabel, UpdateSourceTrigger=PropertyChanged}"/>
                                        <Button Grid.Column="3" Content="&#xE74D;" FontFamily="Segoe MDL2 Assets"
                                                Width="32" Height="32" Margin="4,0,0,0"
                                                VerticalAlignment="Center" Cursor="Hand"
                                                Style="{StaticResource SettingsDeleteIconButton}"
                                                Command="{Binding DataContext.RemoveProcessMappingCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="36"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{DynamicResource LabelProcessName}" Style="{StaticResource SettingsLabelSmallText}" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Column="2" Text="{DynamicResource LabelProcessLabel}" Style="{StaticResource SettingsLabelSmallText}" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Grid>

                        <Button Content="{DynamicResource ButtonAddProcess}" Margin="0,8,0,0" HorizontalAlignment="Left"
                                Command="{Binding AddProcessMappingCommand}"
                                Style="{StaticResource SettingsAddButton}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="16">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource LabelFontSize}" Style="{StaticResource SettingsSectionTitleText}"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                        <TextBlock Text="{DynamicResource DescFontSize}"
                                   Style="{StaticResource SettingsDescriptionText}" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>
                        <ComboBox Style="{StaticResource ModernComboBox}"
                                  ItemsSource="{Binding FontSizeOptions}"
                                  SelectedIndex="{Binding SelectedFontSizeIndex}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="16">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource LabelLanguage}" Style="{StaticResource SettingsSectionTitleText}"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                        <TextBlock Text="{DynamicResource DescLanguage}"
                                   Style="{StaticResource SettingsDescriptionText}" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>
                        <ComboBox Style="{StaticResource ModernComboBox}"
                                  ItemsSource="{Binding LanguageOptions}"
                                  SelectedIndex="{Binding SelectedLanguageIndex}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="16">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource LabelIdleThreshold}" Style="{StaticResource SettingsSectionTitleText}"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                        <TextBlock Text="{DynamicResource DescIdleThreshold}"
                                   Style="{StaticResource SettingsDescriptionText}" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Slider Minimum="1" Maximum="30" Value="{Binding IdleThresholdMinutes}"
                                    Width="220" VerticalAlignment="Center" IsSnapToTickEnabled="True" TickFrequency="1"/>
                            <TextBlock VerticalAlignment="Center" Margin="12,0,0,0" Style="{StaticResource SettingsSliderValueText}"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       Text="{Binding IdleThresholdMinutes, StringFormat={}{0} min}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="16">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource LabelCsvOutputDirectory}" Style="{StaticResource SettingsSectionTitleText}"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                        <TextBlock Text="{DynamicResource DescCsvOutputDirectory}"
                                   Style="{StaticResource SettingsDescriptionText}" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>
                        <TextBox Style="{StaticResource ModernTextBox}"
                                 Text="{Binding CsvOutputDirectory, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="16">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource LabelOutlookCalendarName}" Style="{StaticResource SettingsSectionTitleText}"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                        <TextBlock Text="{DynamicResource DescOutlookCalendarName}"
                                   Style="{StaticResource SettingsDescriptionText}" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0" Style="{StaticResource ModernComboBox}"
                                      IsEditable="True"
                                      ItemsSource="{Binding OutlookCalendarOptions}"
                                      Text="{Binding OutlookCalendarName, UpdateSourceTrigger=PropertyChanged}"/>
                            <Button Grid.Column="1" Content="&#xE72C;" FontFamily="Segoe MDL2 Assets"
                                    ToolTip="{DynamicResource ButtonRefreshCalendars}"
                                    Width="32" Height="32" Margin="8,0,0,0"
                                    VerticalAlignment="Center" Cursor="Hand"
                                    Style="{StaticResource SettingsDeleteIconButton}"
                                    Command="{Binding RefreshOutlookCalendarsCommand}"/>
                        </Grid>
                        <TextBlock Text="{Binding OutlookCalendarStatus}"
                                   Style="{StaticResource SettingsDescriptionText}" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,6,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <TextBlock Text="{Binding SaveStatusMessage}" Foreground="{StaticResource SuccessBrush}"
                       Style="{StaticResource SettingsFooterText}" VerticalAlignment="Center" Margin="0,0,16,0"/>
            <Button Content="{DynamicResource ButtonSave}" Style="{StaticResource PrimaryButton}"
                    Command="{Binding SaveCommand}" Margin="0,0,8,0"/>
            <Button Content="{DynamicResource ButtonClose}" Style="{StaticResource OutlineButton}"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
